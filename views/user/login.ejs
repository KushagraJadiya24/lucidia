<% layout('layouts/boilerplate') %>
<div class="container d-flex justify-content-center align-items-center mt-5">
<div class="glass-card p-5 rounded-4 shadow-lg" style="width: 100%; max-width: 480px;">
  <form action="/login" method="POST" class="login-form">
    <h2 class="mb-4 text-center gradient-heading">Welcome Back</h2>
    
    <div class="mb-3">
      <label class="form-label">Username</label>
      <input type="text" name="username" class="form-control bg-dark-subtle text-white" placeholder="Enter your username" required>
    </div>

    <div class="mb-3">
      <label class="form-label">Password</label>
      <input type="password" name="password" class="form-control bg-dark-subtle text-white" placeholder="Enter your password" required>
    </div>

    <button type="submit" class="btn btn-primary w-100 mt-3">Login</button>
  </form>
  </div>
</div>
    <div class="text-center mt-3">
        <p>Don't have an account? <a href="/signup" class="text-decoration-none">Sign Up</a></p>
    </div>